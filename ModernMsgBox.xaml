<Window x:Class="PCL_CE_Patcher.ModernMsgBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="提示" Width="400" SizeToContent="Height"
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        ShowInTaskbar="False" Topmost="True">

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- 内容区 -->
            <RowDefinition Height="Auto"/>
            <!-- 按钮区 -->
        </Grid.RowDefinitions>

        <!-- 左侧图标 (使用 Segoe MDL2 Assets 字体) -->
        <!-- 如果你的电脑没这个字体，它会显示方框，但Win10/11都有 -->
        <TextBlock x:Name="IconText" Grid.Column="0" Grid.Row="0"
                   Text="&#xE783;" FontFamily="Segoe MDL2 Assets" 
                   FontSize="36" Foreground="#D13438" 
                   VerticalAlignment="Top" HorizontalAlignment="Left"/>

        <!-- 右侧文本 -->
        <TextBlock x:Name="TxtMessage" Grid.Column="1" Grid.Row="0"
                   Text="这是提示消息" TextWrapping="Wrap" 
                   FontSize="14" VerticalAlignment="Center" Margin="0,5,0,20"/>

        <!-- 底部按钮区 -->
        <StackPanel Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="1" 
                    Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">

            <Button x:Name="BtnCancel" Content="取消" Width="80" Height="30" Margin="0,0,10,0"
                    Click="BtnClose_Click" Visibility="Collapsed"/>

            <Button x:Name="BtnAction" Content="确定" Width="100" Height="30"
                    Click="BtnAction_Click" IsDefault="True"/>
        </StackPanel>
    </Grid>
</Window>